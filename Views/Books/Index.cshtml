@model List<BooksManagementSystem.Models.Books>

@{
    ViewData["Title"] = "Employee List";
}

<div class="container mt-5">
    <!-- Title & Add Button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">
            <i class="bi bi-people-fill text-primary me-2"></i>@ViewData["Title"]
        </h2>
        <a asp-action="Create" class="btn btn-dark rounded px-4 py-2 shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> Add Employee
        </a>
    </div>

    <!-- Table -->
    <div class="table-responsive">
        <table class="table table-hover align-middle border rounded shadow-sm">
            <thead class="table-dark text-white">
                <tr>
                    <th scope="col"><i class="bi bi-hash"></i> ID</th>
                    <th scope="col"><i class="bi bi-person"></i> Name</th>
                    <th scope="col"><i class="bi bi-envelope"></i> Email</th>
                    <th scope="col"><i class="bi bi-cash"></i> Salary</th>
                    <th scope="col"><i class="bi bi-tools"></i> Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var emp in Model)
                {
                    <tr>
                        <td>@emp.Id</td>
                        <td>@emp.Name</td>
                        <td>@emp.Description</td>
                        <td class="text-success fw-semibold">₹ @emp.Price.ToString("N2")</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@emp.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
