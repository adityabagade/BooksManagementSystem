@model BooksManagementSystem.Models.Books

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container my-5">
    <div class="employee-delete-card rounded-4 shadow-sm mx-auto">
        <!-- Header -->
        <div class="employee-delete-header bg-dark px-4 py-3 rounded-top-4">
            <h3 class="mb-0 text-white"><i class="bi bi-trash3-fill me-2"></i>Delete Employee</h3>
        </div>

        <!-- Body -->
        <div class="employee-delete-body px-4 py-4 text-center">
            <h5 class="text-muted">Are you sure you want to delete this employee?</h5>
            <p class="fw-semibold mt-3 mb-4 text-danger">
                @Model.Name<br />
                <span class="text-secondary small">@Model.Description</span>
            </p>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-center gap-3">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                        <i class="bi bi-arrow-left me-1"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-danger rounded-pill px-4">
                        <i class="bi bi-trash-fill me-1" value="Delete"></i>Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
