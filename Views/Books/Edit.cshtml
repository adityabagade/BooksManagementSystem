@model BooksManagementSystem.Models.Books

@{
    ViewData["Title"] = "Edit Book";
}

<div class="container my-5">
    <div class="employee-edit-card rounded-4 shadow-sm mx-auto">
        <!-- Header -->
        <div class="employee-edit-header bg-dark px-4 py-3 rounded-top-4">
            <h3 class="mb-0 text-white"><i class="bi bi-pencil-fill me-2"></i>Edit Employee</h3>
        </div>

        <!-- Body -->
        <div class="employee-edit-body px-4 py-4">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label class="form-label fw-semibold text-muted">Full Name</label>
                    <input asp-for="Name" class="form-control employee-input" placeholder="Enter name" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold text-muted">Email Address</label>
                    <input asp-for="Description" type="email" class="form-control employee-input" placeholder="Enter Description" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold text-muted">Salary</label>
                    <input asp-for="Price" type="number" class="form-control employee-input" placeholder="Enter Price" />
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                        <i class="bi bi-arrow-left me-1"></i>Back
                    </a>
                    <button type="submit" class="btn btn-success rounded-pill px-4">
                        <i class="bi bi-save-fill me-1"></i>Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
