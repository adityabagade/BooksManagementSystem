@{
    ViewData["Title"] = "CopyRights";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4"><i class="bi bi-file-earmark-lock-fill text-primary"></i> @ViewData["Title"]</h1>
        <p class="lead text-muted">Use this page to detail your site's Copy Rights Policy.</p>
    </div>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title text-center mb-4"><i class="bi bi-shield-lock-fill text-danger"></i> CopyRight Policy</h4>
                    <p class="card-text">
                        <strong>All rights reserved.</strong> This content and all other content on the website are protected by copyright law. Unauthorized copying, redistribution, or reproduction is strictly prohibited.
                    </p>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-check-circle text-success"></i> All content is owned by our company.</li>
                        <li><i class="bi bi-check-circle text-success"></i> Usage and distribution are only allowed under terms defined by the website.</li>
                        <li><i class="bi bi-check-circle text-success"></i> Violations will lead to legal consequences.</li>
                    </ul>
                    <p class="mt-4 text-center text-muted">
                        <i class="bi bi-copyright"></i> 2025 YourCompanyName. All rights reserved.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
